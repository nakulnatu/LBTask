<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<ListView android:layout_height="wrap_content" android:id="@+id/List_Item"
		android:layout_width="wrap_content" android:layout_alignParentTop="true"
		android:layout_above="@+id/Toolbar_Main"></ListView>
	<LinearLayout android:layout_height="wrap_content"
		android:layout_alignParentBottom="true" android:layout_width="fill_parent"
		android:background="#CCC" android:id="@+id/Toolbar_Main">
		<Button android:id="@+id/Button_Add" android:text="Add"
			android:layout_height="fill_parent" android:layout_width="160dip"></Button>
		<Button android:id="@+id/Button_Home" android:text="Home"
			android:layout_height="50dip" android:layout_width="160dip"></Button>
	</LinearLayout>
</RelativeLayout>